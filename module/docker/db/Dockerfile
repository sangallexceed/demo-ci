#---------------------------------
# イメージを選択
#---------------------------------
FROM mysql:5.7
MAINTAINER eyemovic


#---------------------------------
# パッケージのインストール
#---------------------------------


#---------------------------------
# 設定ファイルをコピー
#---------------------------------
COPY etc/mysql/conf.d/my.cnf /etc/mysql/conf.d/
RUN chmod 644 /etc/mysql/conf.d/my.cnf


#---------------------------------
# サービス起動
#---------------------------------
